<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_70"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_back_map"
            android:layout_width="@dimen/standard_25"
            android:layout_height="@dimen/standard_25"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/standard_15"
            app:srcCompat="@drawable/ic_arrow" />

        <TextView
            android:id="@+id/tv_title_setting_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_15"
            android:layout_marginTop="@dimen/standard_10"
            android:layout_toEndOf="@+id/iv_back_map"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_23"
            tools:text="Title" />

        <TextView
            android:id="@+id/tv_city_setting_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_title_setting_map"
            android:layout_below="@+id/tv_title_setting_map"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_16"
            tools:text="City" />
    </RelativeLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>