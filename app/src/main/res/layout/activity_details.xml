<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_bank_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light_grey"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rv_bank_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_70"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_back_details"
            android:layout_width="@dimen/standard_25"
            android:layout_height="@dimen/standard_25"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/standard_15"
            app:srcCompat="@drawable/ic_arrow" />

        <TextView
            android:id="@+id/tv_title_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_15"
            android:layout_marginTop="@dimen/standard_10"
            android:layout_toEndOf="@+id/iv_back_details"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_23"
            tools:text="Title" />

        <TextView
            android:id="@+id/tv_city_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_title_details"
            android:layout_below="@+id/tv_title_details"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_16"
            tools:text="City" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/standard_30"
            android:layout_height="@dimen/standard_30"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/standard_30"
            app:srcCompat="@drawable/ic_share" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cw_bank_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_bank_menu"
        android:layout_marginBottom="@dimen/standard_5"
        android:layout_marginEnd="@dimen/standard_10"
        android:layout_marginStart="@dimen/standard_10"
        android:layout_marginTop="@dimen/standard_10"
        app:cardElevation="@dimen/standard_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/standard_15">

            <TextView
                android:id="@+id/tv_title_details2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/standard_10"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_23"
                tools:text="City" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/link"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_link_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="@dimen/text_size_16"
                tools:text="Link" />

            <TextView
                android:id="@+id/tv_address_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                tools:text="Address" />

            <TextView
                android:id="@+id/tv_phone_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                tools:text="Phone" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_cash_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cw_bank_details"
        android:layout_marginBottom="@dimen/standard_5"
        android:layout_marginEnd="@dimen/standard_10"
        android:layout_marginStart="@dimen/standard_10"
        app:cardElevation="@dimen/standard_4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/standard_10"
                android:text="@string/cashName"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/standard_20"
                android:text="@string/ask" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView4"
                android:layout_below="@+id/textView3"
                android:text="@string/sel" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_bank_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cv_cash_details" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/standard_16"
        app:fab_addButtonColorNormal="@color/colorAccent"
        app:fab_addButtonColorPressed="@color/colorAccent"
        app:fab_labelStyle="@style/FabLabelStyle">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/color_light_grey"
            app:fab_icon="@drawable/ic_call_floating"
            app:fab_size="mini"
            app:fab_title="@string/fam_menu_call" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/color_light_grey"
            app:fab_icon="@drawable/ic_link_floating"
            app:fab_size="mini"
            app:fab_title="@string/fam_menu_site" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/color_light_grey"
            app:fab_icon="@drawable/ic_map_floating"
            app:fab_size="mini"
            app:fab_title="@string/fam_menu_map" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>